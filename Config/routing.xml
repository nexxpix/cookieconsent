<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="cookieconsent.add.type" path="/admin/module/CookieConsent/AddType">
        <default key="_controller">CookieConsent\Controller\BackOfficeController::addType</default>
    </route>
    <route id="cookieconsent.add.option" path="/admin/module/CookieConsent/AddOption">
        <default key="_controller">CookieConsent\Controller\BackOfficeController::addOption</default>
    </route>

    <!--

    if a /admin/module/cookieconsent/ route is provided, a "Configuration" button will be displayed
    for the module in the module list. Clicking this button will invoke this route.

    <route id="my_route_id" path="/admin/module/cookieconsent">
        <default key="_controller">CookieConsent\Full\Class\Name\Of\YourConfigurationController::methodName</default>
    </route>

    <route id="my_route_id" path="/admin/module/cookieconsent/route-name">
        <default key="_controller">CookieConsent\Full\Class\Name\Of\YourAdminController::methodName</default>
    </route>

    <route id="my_route_id" path="/my/route/name">
        <default key="_controller">CookieConsent\Full\Class\Name\Of\YourOtherController::methodName</default>
    </route>

    ...add as many routes as required.

    <route>
    ...
    </route>
    -->

</routes>
